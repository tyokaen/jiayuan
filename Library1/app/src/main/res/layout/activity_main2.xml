<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jiayuan.library.Main"
    >
    <ListView
        android:id="@+id/Search_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
       />
   <android.support.v4.view.ViewPager
       android:id="@+id/viewpager"
       android:layout_height="match_parent"
       android:layout_width="match_parent"
       android:layout_above="@+id/tg_radio"
       >
       </android.support.v4.view.ViewPager>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tg_radio"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <RadioButton
            android:id="@+id/Radio2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:button="@null"
            android:text="图书"
            android:layout_weight="1"
            android:drawableTop="@drawable/book"
            android:gravity="center|center"
            />
        <RadioButton
            android:id="@+id/Radio3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:button="@null"
            android:text="电器"
            android:layout_weight="1"
            android:drawableTop="@drawable/electrical"
            android:gravity="center|center"
            />
        <RadioButton
            android:id="@+id/Radio1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:button="@null"
            android:layout_weight="1"
            android:text="家具"
            android:drawableTop="@drawable/furniture"
            android:gravity="center|center"
            />
        </RadioGroup>

</RelativeLayout>
