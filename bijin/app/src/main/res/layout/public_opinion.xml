<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
 <LinearLayout
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:orientation="vertical"

     >
<LinearLayout
    android:background="@drawable/main"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    >
<TextView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:textSize="20dp"
    android:text="@string/opinion_Des"
    android:layout_marginTop="10dp"
    android:layout_gravity="center_horizontal"
    />
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     >
  <TextView
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:text="TOTAL"
      android:textSize="50dp"
      android:textStyle="bold"
      android:layout_marginTop="10dp"
      />
  <ProgressBar
      android:layout_width="200dp"
      android:layout_height="200dp"
      style="?android:attr/progressBarStyleHorizontal"
      android:layout_marginLeft="30dp"
      />
     </LinearLayout>
</LinearLayout>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     >
  <ImageView
      android:src="@drawable/marketman"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_marginLeft="250dp"
      />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:text="友達とのシンクロ分析"
       android:layout_marginTop="10dp"
       android:textSize="30dp"
       android:layout_marginLeft="15dp"
       />
  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/marketwoman"
      android:layout_marginLeft="15dp"
      />
  </LinearLayout>
 <LinearLayout
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
     android:orientation="horizontal"
     >
  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/nearest"
      />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="left"
        android:text="好みの近い友達"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        />
  </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:id="@+id/recycle"
        android:layout_marginTop="5dp"
        />
 <LinearLayout
     android:orientation="horizontal"
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     >
  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/farest"
      />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="left"
        android:text="好みの遠い友達"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:textSize="20dp"
        />
  </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:id="@+id/recycle1"
        android:layout_marginTop="5dp"
        />
    <View
        android:background="#9e9e9e"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_share"
        android:background="@drawable/sign_up"
        android:text="結果を共有する"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_input"
        android:background="@drawable/sign_up"
        android:text="サンプル入力"
        />
    </LinearLayout>
</ScrollView>
