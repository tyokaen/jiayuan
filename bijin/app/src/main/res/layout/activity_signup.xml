<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sign_root"
    android:orientation="vertical"
    android:background="@drawable/synchrobackground"
    tools:context="com.example.jiayuan.bijin.login.signup">
<ImageView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:src="@drawable/title"
    android:layout_marginTop="20dp"
    />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="40dp"
    >
<ImageView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_weight="1"
    android:src="@drawable/userid"
    />
    <EditText
        android:id="@+id/Input_ID"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/login_edit"
        android:textColorHint="@color/white"
        android:hint="ID">
    </EditText>
</LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="10dp"
       >
    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/password"
        />
    <EditText
        android:id="@+id/input_password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="パスワード"
        android:layout_weight="2"
        android:textColorHint="@color/white"
        android:inputType="textPassword"
        android:background="@drawable/login_edit"
       >
    </EditText>
      </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="10dp"
           >
           <ImageView
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:layout_weight="1"
               android:src="@drawable/password"
           />
        <EditText
            android:id="@+id/input_password1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="もう一回パスワードを入力"
            android:inputType="textPassword"
            android:background="@drawable/login_edit"
            android:layout_weight="2"
            android:textColorHint="@color/white"
            >
        </EditText>
   </LinearLayout>
 <TextView
     android:text="ログインにはユーザーIDとパスワードが必要になります"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="5dp"
     android:textSize="14dp"
     android:textColor="@color/white"
     />
<TextView
    android:id="@+id/input_problem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login_edit"
    android:layout_marginTop="10dp"
    android:text="秘密の質問"
    android:textSize="15dp"
    android:textColor="@color/white"

    />
    <EditText
        android:id="@+id/input_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:background="@drawable/login_edit"
        />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_signup"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="30dp"
        android:padding="12dp"
        android:background="@drawable/sign_up"
        android:text="次に進む"
        android:textColor="@color/role_yellow_gray"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>


