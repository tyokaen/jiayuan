<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jiayuan.bijin.Activity.input_finish">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:background="@color/white"
        android:id="@+id/tool">
        <TextView
            android:id="@+id/bar_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="サンプロ入力完了"
            />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/goastwhite"
        >
    <TextView
        android:text="実験は完了しました。"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:text="ご協力ありがとうございます"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        />
        </LinearLayout>
    <Button
        android:id="@+id/back_to_mypage"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:background="@drawable/to_login_button"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:text="マイページ"
        android:textColor="@color/white"
        />
    <Button
        android:id="@+id/back_to_likelist"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:background="@drawable/to_login_button"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:text="リストLIKEへ"
        android:textColor="@color/white"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:background="@drawable/retrybutton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:id="@+id/sample_oncemore"
        />


</LinearLayout>
