<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jiayuan.bijin.Activity.Pre_recommend"
    tools:showIn="@layout/activity_pre_recommend">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="3枚選んでください!"
    android:textSize="20dp"
    android:textColor="@color/specialblue"
    android:gravity="center_horizontal"
    />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="後3枚選んでください"
    android:textSize="20dp"
    android:textColor="@color/white"
    android:background="@color/specialblue"
    android:gravity="center_horizontal"
    />
<GridView
    android:layout_marginTop="25dp"
    android:id="@+id/Grid_Pre_Rec"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:numColumns="2"
    android:verticalSpacing="10dp"
    android:horizontalSpacing="10dp"
   />



</LinearLayout>
